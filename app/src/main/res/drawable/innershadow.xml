<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Shape -->
    <item android:top="5dp"
          android:left="5dp"
          android:right="5dp"
          android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neudark"/>
            <corners android:radius="25dp"/>

            <size
                android:width="270dp"
                android:height="270dp"
                />
        </shape>
    </item>


    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#00FF0000"
                android:centerX="0.92"
                android:endColor="#202226"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerX="0.85"
                android:endColor="#202226"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-360"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:startColor="#202226" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:startColor="#202226" />
            <corners android:radius="25dp" />
        </shape>
    </item>


</layer-list>




